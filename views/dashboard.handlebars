<div align="center">
	<header>
      <h1>Hi <span id="name"></span>, what do you want to do?</h1>
  </header>
  <div class="container">
	  <div>
		{{#each categories}}
			<button class="catBtn btn btn-primary" data-category="{{category}}">{{category}}</button>
		{{/each}}
		<button class="catBtn btn btn-primary" data-category="saves">saves</button>
	</div>
	<div class="search-wrap hide">
      <form action="#">
          <input type="text" id="search" placeholder="Type something..." autocomplete="off" class="form-control" />
          <input type="submit" value="search" class="form-control btn btn-primary w100" id="submit">
      </form>
  </div>
  <div id="results"></div>
  </div>
</div>



<script>
	var cookie = document.cookie.split("; ");
	var userName = cookie[0].split("=");
	$("#name").text(userName[1]);
</script>